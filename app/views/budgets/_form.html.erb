<%= semantic_form_for @budget, :html => { :class => "form-horizontal" } do |f| %>
  <%= f.semantic_errors %>
  
  <%= f.inputs do %>
    <%= f.input :name, :input_html => { :class => "input-xlarge" } %>
    <%= f.input :amount, :input_html => { :class => "input-xlarge" } %>
  <% end %>
  
  <%= f.actions do %>
    <%= f.action :submit, :button_html => { :class => "btn-inverse" } %>
  <% end %>
<% end %>