<div class="page-header">
  <h1>
    Deduction 
    <small class="pull-right">
      <%= link_to favourites_path(:favourite => { :name => @deduction.name, :amount => @deduction.amount, :description => @deduction.description, :budget_id => @deduction.budget_id, :tag_list => @deduction.tag_list}), :method => :post do %>
        <i class="icon-star"></i>
      <% end %>
      &nbsp;
      <%= link_to edit_deduction_path(@deduction) do %>
        <i class="icon-edit"></i>
      <% end %>
    </small>
  </h1>
</div>
  
<p>
  <b>Name:</b>
  <%= @deduction.name %>
</p>

<p>
  <b>Amount:</b>
  <%= number_to_currency(@deduction.amount) %>
</p>

<p>
  <b>Description:</b>
  <%= @deduction.description %>
</p>

<p>
  <b>Budget:</b>
  <%= @deduction.budget.name %>
</p>

<p>
  <b>Tags:</b>
  <%= @deduction.tag_list %>
</p>
