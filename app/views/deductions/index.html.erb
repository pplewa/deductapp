<h1>Listing deductions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Amount</th>
    <th>Date</th>
    <th>Description</th>
    <th>Budget</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @deductions.each do |deduction| %>
  <tr>
    <td><%= deduction.name %></td>
    <td><%= deduction.amount %></td>
    <td><%= deduction.date %></td>
    <td><%= deduction.description %></td>
    <td><%= deduction.budget_id %></td>
    <td><%= link_to 'Show', deduction %></td>
    <td><%= link_to 'Edit', edit_deduction_path(deduction) %></td>
    <td><%= link_to 'Destroy', deduction, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @posts %>
