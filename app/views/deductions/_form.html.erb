<%= semantic_form_for @deduction, :html => { :class => "form-horizontal" } do |f| %>
  <%= f.semantic_errors %>
  
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :amount %>
    <%= f.input :date, :as => :string, :input_html => {:type => "date"} %>
    <%= f.input :description %>
    <%= f.input :budget_id, :as => :select, :collection => Hash[Budget.all.map{|b| [b.name, b.id]}] %>
  <% end %>
  
  <%= f.actions do %>
    <%= f.action :submit, :button_html => { :class => "btn-inverse" } %>
  <% end %>
<% end %>
